@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-8">
        <h2>Check Out Your Closet</h2>
        <p>
            Step inside your virtual closet and get a better idea of what you want to wear today
        </p>
        <p><a class="btn btn-default" href="~/Articles/Index">Inventory &raquo;</a></p>
    </div>
    <div class="col-md-4 sidecarosel">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img class="sel" src="~/Content/Images/lebron.jpg" alt="Top" style="width:100%;">
                </div>

                <div class="item">
                    <img class="sel" src="~/Content/Images/Watch.jpg" alt="Accessory" style="width:100%;">
                </div>

                <div class="item">
                    <img class="sel" src="~/Content/Images/paulgeorge.jpg" alt="Shoe" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

</div>
</div>